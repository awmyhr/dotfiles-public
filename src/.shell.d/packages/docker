alias dimages='d images --format "table {{.Repository}}\t{{.Tag}}\t{{.CreatedSince}}\t{{.Size}}"'
alias dps='d ps --format "table {{.Names}}\t{{.Image}}\t[{{.Label \"org.label-schema.version\"}}]\t{{.Command}}\t{{.Status}}"'

