#----------------------------------------------------------------------
#-- Notes/known bugs/other issues
#----------------------------------------------------------------------

alias d='docker'
alias dimages='docker images --format "table {{.Repository}}\t{{.Tag}}\t{{.CreatedSince}}\t{{.Size}}"'
alias dps='docker ps --format "table {{.Names}}\t{{.Image}}\t[{{.Label \"org.label-schema.version\"}}]\t{{.Command}}\t{{.Status}}"'
alias drumit='docker run --rm -it'
alias dtail='docker logs'
alias dkillall='docker kill $(docker ps -q)'
alias drmall='docker rm -v $(docker ps -aq)'
alias drmiall='docker rmi $(docker images -f "dangling=true" -q)'
alias drmvall='docker volume rm $(docker volume ls -f dangling=true -q)'
alias dcleanall='drmall; drmvall; drmiall'

DOCKER_CLIENT_VERSION=$(docker version --format '{{.Client.Version}}' 2>/dev/null)
DOCKER_SERVER_VERSION=$(docker version --format '{{.Server.Version}}' 2>/dev/null)
export DOCKER_CLIENT_VERSION DOCKER_SERVER_VERSION

#=== FUNCTION ================================================================
# NAME:
# DESCRIPTION:
# NOTE:
#===============================================================================
# _func() {
# }
# command -v declare >/dev/null 2>&1 && declare -fx _func 1>/dev/null 2>/dev/null

#===============================================================================
#----------------------------------------------------------------------
export ISSET_DOCKER=1
#----------------------------------------------------------------------
#===============================================================================
